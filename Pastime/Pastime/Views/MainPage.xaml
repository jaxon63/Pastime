                               VerticalOptions="Center"
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"
                               FontAttributes="Bold" />
                    </Frame>
                    
                    <Label Text="Dashboard" Grid.Column="1"
                           
                           FontSize="25"/>
            </Grid>
        </StackLayout>

            
            <BoxView HeightRequest="3" BackgroundColor="Green" 
