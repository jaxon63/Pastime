<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Pastime.Views.CreateEventViewModal.CreateEventViewModalDate">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Label HorizontalOptions="Center" HorizontalTextAlignment="Center" FontSize="Large" Text="{Binding Name}" />

            <Label HorizontalOptions="CenterAndExpand" Text="When will the event be held?"/>

            <DatePicker Date="{Binding EventDate}"
                                HorizontalOptions="FillAndExpand"
                                Format="D" />

            <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
                <StackLayout Orientation="Vertical">
                    <Label HorizontalOptions="FillAndExpand" Text="From" />
                    <TimePicker Time="{Binding StartTime}"
                                HorizontalOptions="FillAndExpand"
                                Format="t" />
                </StackLayout>
                <StackLayout Orientation="Vertical">
                    <Label HorizontalOptions="FillAndExpand" Text="To" />
                    <TimePicker Time="{Binding EndTime}"
                                HorizontalOptions="FillAndExpand"
                                Format="t" />
                </StackLayout>
            </StackLayout >
            <Label HorizontalOptions="Center"
                   TextColor="Red"
                   FontSize="Micro"
                   Text="{Binding EventDateErrMsg}" />
            <Button Text="Back" Command="{Binding GoBackCommand}" />
            <Button Text="Next" Command="{Binding DateCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>